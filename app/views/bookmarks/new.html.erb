        <h1 class="text-center">Add a new movie to <%= @list.name %></h1>
<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.association :movie, collection: Movie.all, prompt: 'Select a movie' %>
  <%= f.input :comment, placeholder: 'Add a comment for your movie' %>
  <%= f.submit %>
<% end %>

